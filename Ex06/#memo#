
    x = n-r;
    for(i = n ; x < i ; i--){
      facn *= i;
    }
    
    for(k = 1 ; k <= r ; k++){
      facr *= k;
    }
    
    combi = facn / facr;

    printf("%dC%d = %d\n",n,r,combi);



